{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"],
  "pluginSearchDirs": false,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 4,
  "printWidth": 144,
  "semi": true,
  "tailwindFunctions": ["cva", "cn"],
  "importOrder": [
    "<BUILT_IN_MODULES>",
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "^(astro/(.*)$)|^(astro:$)",
    "<THIRD_PARTY_MODULES>",
    "^types$",
    "^@/types/(.*)$",
    "^@/config/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^(?!.*[.]css$)[./].*$",
    ".css$"
  ] 
}
